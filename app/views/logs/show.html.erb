<h1><%= @log.date %></h1>

<%= link_to "Back", logs_path %>
<%= link_to "Edit", edit_form_log_path(@log.form, @log) %>
<%= link_to "Delete", log_path(@log), data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>

<table>
  <thead>
    <tr>
      <th scope="col">Field</th>
      <th scope="col">Response</th>
    </tr>
  </thead>
  <tbody>
    <% @log.responses.each do |r| %>
      <tr>
        <th scope="row"><%= r.field.short_prompt %></th>
        <td><%= r.text %></td>
      </tr>    
    <% end %>
  </tbody>
</table>