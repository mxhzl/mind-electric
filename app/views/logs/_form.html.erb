<%= form_with model: [form, log] do |f| %>
    <%= f.label :date %>
    <%= f.date_field :date, value: Date.today %>

    <% form.fields.order(:created_at).each do |field| %>
        <%= label :field, field.key, field.prompt %>
        <%= textarea :field, field.key, placeholder: field.help_text, required: true, value: field.responses.find_by(log_id: @log.id)&.text %>
    <% end %>
    
    <%= f.submit %>
<% end %>